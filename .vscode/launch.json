{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug-cpp",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "lldb",
      "preLaunchTask": "clang++ build active file"
    },
    {
      "name": "debug-java",
      "type": "java",
      "request": "launch",
      "mainClass": "${file}"
    },
    {
      "name": "debug-py",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}
